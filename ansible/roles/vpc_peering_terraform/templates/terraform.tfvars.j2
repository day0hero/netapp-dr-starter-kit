# -----------------------------------------------------------------------------
# Terraform Variables for VPC Peering
# Generated by Ansible - Do not edit manually
# -----------------------------------------------------------------------------

# Production cluster
prod_region           = "{{ prod_cluster.region }}"
prod_vpc_id           = "{{ prod_cluster.vpc_id }}"
prod_vpc_cidr         = "{{ prod_cluster.vpc_cidr }}"
prod_cluster_name     = "{{ prod_cluster.cluster_name }}"
prod_route_table_ids  = {{ prod_cluster.all_route_table_ids | to_json }}

# DR cluster
dr_region             = "{{ dr_cluster.region }}"
dr_vpc_id             = "{{ dr_cluster.vpc_id }}"
dr_vpc_cidr           = "{{ dr_cluster.vpc_cidr }}"
dr_cluster_name       = "{{ dr_cluster.cluster_name }}"
dr_route_table_ids    = {{ dr_cluster.all_route_table_ids | to_json }}

# DNS resolution across peering (needs ec2:ModifyVpcPeeringConnectionOptions)
enable_dns_resolution = {{ vpc_peering_enable_dns_resolution | lower }}

# Tags
tags = {
{% for key, value in tags.items() %}
  {{ key }} = "{{ value }}"
{% endfor %}
}
