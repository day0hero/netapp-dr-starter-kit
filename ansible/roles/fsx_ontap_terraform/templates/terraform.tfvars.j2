# -----------------------------------------------------------------------------
# Terraform Variables for FSx ONTAP
# Generated by Ansible - Do not edit manually
# -----------------------------------------------------------------------------

# AWS Configuration
aws_region = "{{ cluster_info.region }}"

# Network Configuration
vpc_id          = "{{ cluster_info.vpc_id }}"
subnet_ids      = {{ cluster_info.subnet_ids[:2] | to_json }}
route_table_ids = {{ cluster_info.route_table_ids | to_json }}
allowed_cidrs   = {{ allowed_cidrs | to_json }}

# FSx ONTAP Configuration
file_system_name                  = "{{ file_system_name }}"
storage_capacity                  = {{ storage_capacity }}
throughput_capacity               = {{ throughput_capacity }}
storage_type                      = "{{ storage_type }}"
deployment_type                   = "{{ deployment_type }}"
weekly_maintenance_time           = "{{ weekly_maintenance_time }}"
automatic_backup_retention_days   = {{ automatic_backup_retention_days }}
daily_automatic_backup_start_time = "{{ daily_automatic_backup_start_time }}"

# Passwords
fsx_admin_password = "{{ fsx_admin_password }}"
svm_admin_password = "{{ svm_admin_password }}"

# SVM Configuration
svm_name                   = "{{ svm_name }}"
root_volume_security_style = "{{ root_volume_security_style }}"

# Secrets Manager
create_secrets = {{ create_secrets | lower }}

# Tags
tags = {
{% for key, value in tags.items() %}
  {{ key }} = "{{ value }}"
{% endfor %}
}
